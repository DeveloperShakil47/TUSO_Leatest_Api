{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "TusoCon": "Data Source=.;Initial Catalog=TUSO-17-12-2023;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True; User Id = sa; Password = 007"
    //"TusoCon": "Data Source=.;Initial Catalog=TUSO-17-12-2023;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True; User Id = sa; Password = 007"

  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information",
        "Microsoft.EntityFrameworkCore": "Error"
      },
      "Using": [ "Serilog.Sinks.MSSqlServer" ]
    },

    "WriteTo": [

      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=.;Initial Catalog=TUSO-17-12-2023;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True; User Id = sa; Password = 007",
          "tableName": "TusoErrorLogs",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "removeStandardColumns": [ "Properties", "Exception", "TimeStamp", "Level", "MessageTemplate", "Message" ],

            "customColumns": [
              {
                "ColumnName": "LogDate",
                "DataType": "smalldatetime",
                "AllowNull": true
              },
              {
                "ColumnName": "Location",
                "DataType": "nvarchar",
                "AllowNull": true,
                "DataLength": 255
              },
              {
                "ColumnName": "ClassName",
                "DataType": "nvarchar",
                "AllowNull": true,
                "DataLength": 255
              },
              {
                "ColumnName": "MethodName",
                "DataType": "nvarchar",
                "AllowNull": true,
                "DataLength": 255
              },
              {
                "ColumnName": "ErrorMessage",
                "DataType": "nvarchar",
                "AllowNull": true,
                "DataLength": -1
              }
             
            ]
          }
        }
      }
    ],

    "TableName": "TusoErrorLogs",
    "LogFilePath": "Serilogs\\AppLogs.txt",
    "Enrich": [ "FromLogContext" ]

  },
  "AllowedHosts": "*"
}
